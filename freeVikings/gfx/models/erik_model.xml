<?xml version="1.0"?>

<model>
  <load_pre>
    <image sym="left">vikings/erik/erik_stand_left.tga</image>
    <image sym="right" srcsym="left" operation="mirror-x" />
    <image sym="climb">vikings/erik/erik_climbing.tga</image>
    <image sym="bull-left">vikings/erik/erik_bullhead_left.tga</image>
    <image sym="bull-right" srcsym="bull-left" operation="mirror-x"/>
    <image sym="pull-right">pushsketch.png</image>
    <image sym="pull-left" srcsym="pull-right" operation="mirror-x"/>
  </load_pre>

  <states>
    <state name="onground_standing_left" sym="left"/>
    <state name="onground_standing_right" sym="right"/>
    <state name="onground_moving_left" sym="left"/>
    <state name="onground_moving_right" sym="right"/>

    <state name="onground_knocked-out_left" image="erik_ko_left.png"/>
    <state name="onground_knocked-out_right" image="erik_ko_right.png"/>

    <state name="onground_pulling_left" sym="pull-left"/>
    <state name="falling_pulling_left" sym="pull-left"/>
    <state name="onground_pulling_right" sym="pull-right"/>
    <state name="falling_pulling_right" sym="pull-right"/>

    <state name="falling_standing_right" sym="right"/>
    <state name="falling_standing_left" sym="left"/>
    <state name="falling_moving_right" sym="right"/>
    <state name="falling_moving_left" sym="left"/>

    <state name="rising_standing_left" sym="left"/>
    <state name="rising_standing_right" sym="right"/>
    <state name="rising_moving_left" sym="left"/>
    <state name="rising_moving_right" sym="right"/>

    <state name="onground_bullhead_left" sym="bull-left"/>
    <state name="onground_bullhead_right" sym="bull-right"/>

    <state name="climbingUp_standing_left" sym="climb"/>
    <state name="climbingDown_standing_left" sym="climb"/>
    <state name="climbingRest_standing_left" sym="climb"/>

    <state name="climbingUp_standing_right" sym="climb"/>
    <state name="climbingDown_standing_right" sym="climb"/>
    <state name="climbingRest_standing_right" sym="climb"/>

  </states>
</model>
